<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="GradleDependency">

        <include
            layout="@layout/header"
            android:id="@+id/header"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="302dp"
        android:layout_height="398dp"
        app:srcCompat="@drawable/wins_page"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="37dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.495" />


        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="7dp"
            android:text="الدفع عند الاستلام"
            android:textColor="#9f9c9c"
            android:textSize="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/textView11"
            app:layout_constraintStart_toStartOf="@+id/guideline4"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        android:text="وسيلة الدفع:"
        android:textColor="#000000"
        android:textSize="16dp"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_address"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        android:text="المنوفية شبين الكوم - ش مصطفي"
        android:textColor="#9f9c9c"
        android:textSize="16dp"

        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView9"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="20dp"
        android:text="عنوان الاستلام:"
        android:textColor="#000000"
        android:textSize="16dp"
        android:layout_marginLeft="198dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView4"
        android:layout_marginTop="44dp"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="-39dp"
            android:layout_marginTop="8dp"
            android:text="#246789789"
            android:textColor="#9f9c9c"
            android:textSize="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/textView7"
            app:layout_constraintStart_toStartOf="@+id/guideline4"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView7"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="20dp"
        android:text="رقم الطلب:"
        android:textColor="#000000"
        android:textSize="16dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="128dp" />


    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_dwonlistview"
        android:text="انتقال الي الرئيسية"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        android:textColor="#ffffff"
        android:onClick="btn_goto_home"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintHorizontal_bias="0.498" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="110dp" />
    </android.support.constraint.ConstraintLayout>

    </ScrollView>