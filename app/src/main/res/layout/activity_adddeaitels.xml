<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:segmentedgroup="http://schemas.android.com/apk/com.example.android.wacher"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/bg_adddeatiles"
    android:layout_height="match_parent">
    <include
        layout="@layout/header"
        android:id="@+id/header"
        android:layout_height="0dp"
        android:layout_width="0dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/et_4"
        android:layout_width="257dp"
        android:layout_height="35dp"
        android:background="@drawable/tv_add_deatiels"
        android:ems="10"
        android:gravity="center"
        android:hint="اسم المستلم"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="45dp"
        app:layout_constraintBottom_toTopOf="@+id/butNext"
        tools:ignore="HardcodedText,TextFields"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>
    <EditText
        android:id="@+id/et_3"
        android:layout_width="257dp"
        android:layout_height="35dp"
        android:background="@drawable/tv_add_deatiels"
        android:ems="10"
        android:gravity="center"
        android:hint="اسم الشارع أو العمارة"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/et_4"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        tools:ignore="HardcodedText"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>
    <EditText
        android:id="@+id/et_2"
        android:layout_width="257dp"
        android:layout_height="35dp"
        android:background="@drawable/tv_add_deatiels"
        android:ems="10"
        android:gravity="center"
        android:hint="أسم المنطقة او البلد"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/et_3"
        app:layout_constraintHorizontal_bias="0.512"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        tools:ignore="HardcodedText"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>
    <EditText
        android:id="@+id/et_1"
        android:layout_width="257dp"
        android:layout_height="35dp"
        android:background="@drawable/tv_add_deatiels"
        android:ems="10"
        android:gravity="center"
        android:hint="المحافظة"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/et_2"
        app:layout_constraintHorizontal_bias="0.51"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        tools:ignore="HardcodedText"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/butNext"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:textColor="#ffffff"
        android:textSize="17dp"
        android:text="حفظ البيانات"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/btn_dwonlistview"
        android:onClick="NextStep"
        android:layout_marginBottom="20dp"
        tools:ignore="HardcodedText,SpUsage"
        app:layout_constraintHorizontal_bias="0.503" />


    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline6"
        app:layout_constraintGuide_begin="92dp"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="قم بملىء البيانات كاملة"
        android:textColor="@color/colorBlack"
        android:textSize="22dp"
        app:layout_constraintTop_toTopOf="@+id/guideline6"
        android:layout_marginTop="64dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="42dp"
        app:layout_constraintBottom_toTopOf="@+id/et_1"
        app:layout_constraintVertical_bias="0.785"
        tools:ignore="HardcodedText,SpUsage" />


</android.support.constraint.ConstraintLayout>