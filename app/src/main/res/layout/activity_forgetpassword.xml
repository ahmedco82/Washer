<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/b_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="إرسال كلمة السر"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:background="@drawable/b_login"
        tools:ignore="HardcodedText,MissingConstraints"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/et_entername"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:onClick="Send"
        app:layout_constraintRight_toRightOf="@+id/et_entername"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/et_entername"
        app:layout_constraintHorizontal_bias="0.431"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="280dp"
        android:layout_height="310dp"
        app:srcCompat="@drawable/board_forgetpassowrd"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:contentDescription=""
        tools:ignore="ContentDescription"
        app:layout_constraintBottom_toBottomOf="parent" />
    <EditText
        android:id="@+id/et_entername"
        android:hint="@string/et_mail"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/tv_add_deatiels"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintHorizontal_bias="0.681"
        app:layout_constraintLeft_toLeftOf="@+id/imageView2"
        app:layout_constraintRight_toRightOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        tools:ignore="HardcodedText,LabelFor"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>