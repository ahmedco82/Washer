<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout
        android:orientation="vertical"
        android:background="@drawable/bg_adddeatiles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="GradleDependency">

    <include
        layout="@layout/header"
        android:id="@+id/header"/>

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="عنوان المنزل"
        android:layoutDirection="rtl"
        android:layout_marginLeft="33dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="130dp"
        app:layout_constraintRight_toLeftOf="@+id/radioButton2"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.244"
        tools:ignore="HardcodedText" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="عنوان العمل"
        android:layoutDirection="rtl"
        android:layout_marginRight="82dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="130dp"
        tools:ignore="HardcodedText" />

        <include
            android:id="@+id/flight_info"
            layout="@layout/inputstexts_adddeaitels"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/radioButton2"
            android:layout_height="wrap_content"
            tools:ignore="RtlHardcoded"
            android:layout_marginTop="14dp"
            tools:layout_editor_absoluteX="76dp" />

</android.support.constraint.ConstraintLayout>
</ScrollView>