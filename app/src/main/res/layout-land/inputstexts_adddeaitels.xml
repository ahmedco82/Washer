<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <EditText
        android:id="@+id/et_4"
        android:layout_width="257dp"
        android:layout_height="35dp"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/tv_add_deatiels"
        android:ems="10"
        android:gravity="center"
        android:hint="أسم الشهرة"
        app:layout_constraintBottom_toTopOf="@+id/butNext"
        app:layout_constraintRight_toLeftOf="@+id/guideline8"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/et_3"
        android:layout_width="257dp"
        android:layout_height="35dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/tv_add_deatiels"
        android:ems="10"
        android:gravity="center"
        android:hint="اسم الشارع أو العمارة"
        app:layout_constraintBottom_toTopOf="@+id/et_4"
        app:layout_constraintRight_toLeftOf="@+id/guideline8"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/et_2"
        android:layout_width="257dp"
        android:layout_height="35dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/tv_add_deatiels"
        android:ems="10"
        android:gravity="center"
        android:hint="أسم المنطقة او البلد"
        app:layout_constraintBottom_toTopOf="@+id/et_3"
        app:layout_constraintRight_toLeftOf="@+id/guideline8"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/et_1"
        android:layout_width="257dp"
        android:layout_height="35dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/tv_add_deatiels"
        android:ems="10"
        android:gravity="center"
        android:hint="المحافظة"
        app:layout_constraintBottom_toTopOf="@+id/et_2"
        app:layout_constraintRight_toLeftOf="@+id/guideline8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/butNext"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="70dp"
        android:background="@drawable/btn_save"
        app:layout_constraintRight_toLeftOf="@+id/guideline8"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.422" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="521dp" />

</android.support.constraint.ConstraintLayout>